<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bullutin.ui.InsertPostAcitivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/textview_insertpost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="今日感じたことを呟こう"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="clip_vertical|right"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <ImageButton
                android:id="@+id/imagebutton_insertpost"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:backgroundTint="#00FFFFFF"
                android:baselineAlignBottom="false"
                app:srcCompat="@drawable/ic_baseline_photo_camera_back_24" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="#00FFFFFF"
                app:srcCompat="@drawable/ic_baseline_local_see_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <FrameLayout
                android:id="@+id/imageContainer1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/image1_insertpost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_baseline_favorite_24" />

                <ImageView
                    android:id="@+id/cancelImage1"
                    android:layout_width="38dp"
                    android:layout_height="36dp"
                    android:layout_gravity="right"
                    app:srcCompat="@drawable/ic_baseline_clear_24" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/imageContainer2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/image2_insertpost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_baseline_favorite_24" />

                <ImageView
                    android:id="@+id/cancelImage2"
                    android:layout_width="38dp"
                    android:layout_height="36dp"
                    android:layout_gravity="right"
                    app:srcCompat="@drawable/ic_baseline_clear_24" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/imageContainer3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/image3_insertpost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_baseline_favorite_24" />

                <ImageView
                    android:id="@+id/cancelImage3"
                    android:layout_width="38dp"
                    android:layout_height="36dp"
                    android:layout_gravity="right"
                    app:srcCompat="@drawable/ic_baseline_clear_24" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/imageContainer4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/image4_insertpost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_baseline_favorite_24" />

                <ImageView
                    android:id="@+id/cancelImage4"
                    android:layout_width="38dp"
                    android:layout_height="36dp"
                    android:layout_gravity="right"
                    app:srcCompat="@drawable/ic_baseline_clear_24" />

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>